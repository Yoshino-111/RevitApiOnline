<Window x:Class="RevitApiOnline.ListBoxWPF.ListBoxDuctWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitApiOnline.ListBoxWPF"
             mc:Ignorable="d" 
             Width="400" Height="600" Topmost="False" WindowStartupLocation="CenterOwner">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="listBoxOfDuct" SelectionMode="Multiple" SelectedItem="{Binding DuctSelected}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding NameDuct}"/>
                        <Separator Width="30" Opacity="0"/>
                        <TextBlock Text="{Binding LevelDuct}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Click="clickOK" Grid.Row="1" Width="80" 
            HorizontalAlignment="Right" Content="OK"/>
    </Grid>
</Window>
