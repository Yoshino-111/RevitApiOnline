<Window x:Class="RevitApiOnline.WPF.LearnWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitApiOnline.WPF"
             mc:Ignorable="d" 
             Height="300" Width="500">

    <Window.Resources>
        <Style x:Key="textAndColor" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Yellow"/>
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>
    </Window.Resources>
    
    
    
     <!--bo cuc duoc chia lam 5 phan vua cot vua hang-->
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/> <!--2* được định nghĩa làm rộng cột cần fix tương tự cho các hàng khác-->
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="30"/> <!--fix cung gia tri khong the thay doi-->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Foreground="Blue" Background="green" Grid.Column="1" Grid.Row="1" Text="VanLuc"/>
        <!--cách này được viết để làm trực tiếp trong code, cách 1 nhưng khi thay đổi thì nó k tối ưu
        không fix được text di chuyển trong ô-->
        
        <TextBlock  Style="{StaticResource textAndColor}" Grid.Row="2" Grid.Column="2" Text="Duct"/>
        <!--Goị hàm để đổ màu cho nhiều đối tượng, chỉ cần thay đổi là tự động cách này như trên theo
        Window.Resources-->

        <!--chia nhỏ các ô chính thành ô nhỏ trong 1 grid nếu muốn. Border thì chủ yếu tô viền cho đối tượng-->
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Border BorderBrush="Black" BorderThickness="1">
                <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Pipe"/>
            </Border>
            
            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0 1 1 1">
                <Label Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="With"/>
                <!--có thể làm theo stype theo biến key như cách trên , text này có thể điều chỉnh được-->
            </Border>
               
            <!--Span mở rộng thêm 1 hàng hoặc 1 cột nếu muốn theo cách design riêng của bản thân-->
            <Label Grid.ColumnSpan="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="1" Content="xxx"/>

            <!--TextBox Dùng để nhập dữ liệu cần thiết chạy hàm , textchanged dùng để chạy dữ liệu khi chạy hàm...-->
            <TextBox TextChanged="textChangedBox" x:Name="TextBox" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="30" 
                     Width="50" Grid.ColumnSpan="2" Grid.Row="2" Text="AAA"> </TextBox>

        </Grid>
        <!--button dùng để làm nút nhấn điều khiển lệnh--> 
        <Button Click="clickOk" Width="80" Height="30" Grid.Row="4" Grid.Column="4" Content="OK"/>

          <!--check box nhưng ko cho lựa chọn 1 cái trong 3 cái được.-->
        <StackPanel Grid.Row="2" VerticalAlignment="Center">
            <CheckBox Name="checkBoxAll" IsChecked="True" Content="All"/>
            <CheckBox Name="checkBoxYes" Content="Yes"/>
            <CheckBox Name="checkBoxNo" Content="No"/>
        </StackPanel>
        
        <!--RadioButton phải group lại với nhau chứ nếu k group nó sẽ ảnh hưởng đến thằng còn lại-->
        <GroupBox Grid.Row="3" Header="Demo" >
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <RadioButton IsChecked="True" Content="Yes"/>
                <RadioButton Content="No"/>
                <RadioButton Content="Maybe"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Row="3" Grid.Column="1" Header="Demo" >
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <RadioButton IsChecked="True" Content="Yes"/>
                <Image Width="15" Source="/wpf/image.png"/> 
                <Separator Width="5" Opacity="0"/> <!--separator dùng đễ cách các lựa chọn cho dễ nhìn hơn-->
                <RadioButton  Content="No"/>
                <RadioButton Content="Maybe"/>
            </StackPanel>
        </GroupBox>
        
        <!--cách tạo gridsplitter để kéo qua lại trong wpf-->
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <TextBox>AAA</TextBox>
            </Grid>
            <Grid Grid.Column="2">
                <TextBox>bbb</TextBox>
            </Grid>
            <GridSplitter HorizontalAlignment="Center" Width="1" BorderBrush="black" 
                          BorderThickness="1" Grid.Column="1"/>
        </Grid>

    </Grid>
</Window>
